<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/format"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".QuizActivity">


    <TextView
        android:id="@+id/questiontxt"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="10dp"
        android:text="the Question is..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/firstdivide"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/questiontxt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="#76E900"
            android:padding="10dp"
            android:text="A)"
            android:textAlignment="center"
            android:textSize="20dp"
        />

        <Button
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="#76E900"
            android:padding="10dp"
            android:text="B)"
            android:textAlignment="center"
            android:textSize="20dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/seconddivide"
        android:layout_below="@+id/firstdivide"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="#76E900"
            android:padding="10dp"
            android:text="C)"
            android:textAlignment="center"
            android:textSize="20dp"
        />

        <Button
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="#76E900"
            android:padding="10dp"
            android:text="D)"
            android:textAlignment="center"
            android:textSize="20dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirddivide"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/seconddivide"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="00:00"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:id="@+id/timer"
        />

    </LinearLayout>









</RelativeLayout>